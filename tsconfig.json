{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"checkJs": false,
		"types": ["vitest/globals", "node"],
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "test/**/*", "vitest.config.ts", "index.js"],
	"exclude": ["dist", "coverage", "node_modules"]
}
