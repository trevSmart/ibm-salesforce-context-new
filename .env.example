# IBM Salesforce Context MCP Server Environment Variables
# Copy this file to .env and configure the values for your environment

# =============================================================================
# MCP Server Configuration
# =============================================================================

# Transport type: 'stdio' or 'http' (default: stdio)
MCP_TRANSPORT=stdio

# Log level: 'debug', 'info', 'warn', 'error' (default: info)
LOG_LEVEL=info

# HTTP port for http transport (auto-finds available if occupied, default: 3000)
MCP_HTTP_PORT=3000

# Workspace paths (comma-separated)
WORKSPACE_FOLDER_PATHS=/path/to/your/salesforce/project

# =============================================================================
# Salesforce Org Configuration (for testing and development)
# =============================================================================

# Salesforce org URL (e.g., https://test.salesforce.com, https://login.salesforce.com)
SF_ORG_URL=https://test.salesforce.com

# Salesforce org client ID (from Connected App)
SF_ORG_CLIENT_ID=your_client_id_here

# Salesforce org client secret (from Connected App)
SF_ORG_CLIENT_SECRET=your_client_secret_here

# Salesforce org username
SF_ORG_CLIENT_USERNAME=your_username@example.com

# Salesforce org password (including security token if required)
SF_ORG_CLIENT_PASSWORD=your_password_with_security_token

# Test user for automated testing
MCP_TEST_USER=username@my-salesforce-org.com

# =============================================================================
# Salesforce Agentforce Configuration (optional)
# =============================================================================

# Agentforce Agent ID for chat functionality
SF_MCP_AGENTFORCE_AGENT_ID=your_agentforce_agent_id

# =============================================================================
# Development and Testing Configuration (optional)
# =============================================================================

# Enable dry run mode for issue reporting (true/false)
MCP_REPORT_ISSUE_DRY_RUN=false

# Vitest worker ID for parallel testing (automatically set by test runner)
# VITEST_WORKER_ID=0

# =============================================================================
# System Environment Variables (automatically detected)
# =============================================================================

# User name for reporting (automatically detected from USER or USERNAME)
# USER=your_username
# USERNAME=your_username
